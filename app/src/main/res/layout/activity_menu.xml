<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background">


    <TextView
        android:id="@+id/menu_titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:minWidth="200dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/menu_header_text"
        android:fontFamily="@font/roboto_light_italic"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/create_shopping_list_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Shopping Lists"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_titleText" />

    <ImageButton
        android:id="@+id/btn_createShoppingList"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_shopping_list_textView" />

    <TextView
        android:id="@+id/hidden_gems_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Hidden Gems"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_createShoppingList" />

    <ImageButton
        android:id="@+id/btn_HiddenGems"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_diamond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hidden_gems_textView" />

    <TextView
        android:id="@+id/search_hidden_gem_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Search for Hidden Gems"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_HiddenGems" />

    <ImageButton
        android:id="@+id/btn_findHiddenGems"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_hidden_gem_TextView" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/infobar_container"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/hidden_gem_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/infobar_container"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/list_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/infobar_container"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/search_gem_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infobar_container"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/search_gem_info_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infobar_container"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/infobar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_saveCarGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park Car"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:background="@drawable/info_bar_left_button"/>

        <Button
            android:id="@+id/btn_findCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_car"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:background="@drawable/info_bar_middle_button"/>

        <Button
            android:id="@+id/infobar_middle_button_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:background="@drawable/info_bar_middle_button"/>

        <Button
            android:id="@+id/infobar_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:background="@drawable/infor_bar_right_button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>